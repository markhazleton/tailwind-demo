{
  "name": "@tailwindspark/demo-app",
  "private": true,
  "version": "1.0.0",
  "description": "TailwindSpark Demo Application - Interactive showcase of Tailwind CSS components and design system",
  "type": "module",
  "author": {
    "name": "Mark Hazleton",
    "email": "mark@markhazleton.com",
    "url": "https://markhazleton.com"
  },
  "homepage": "https://markhazleton.github.io/tailwind-demo/",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "npm run build && npm run analyze:open",
    "analyze": "npx vite-bundle-analyzer ../../dist --mode gzip",
    "analyze:open": "start ../../reports/bundle-analysis.html",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@tailwindspark/design-tokens": "*",
    "@tailwindspark/ui-components": "*",
    "@types/react-router-dom": "^5.3.3",
    "clsx": "^2.1.1",
    "lightningcss": "^1.30.2",
    "lucide-react": "^0.553.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.12",
    "vite-bundle-analyzer": "^1.2.3"
  }
}
