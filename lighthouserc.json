{
  "ci": {
    "collect": {
      "startServerCommand": "npm run preview",
      "startServerReadyPattern": "Local:.*http://localhost:4173",
      "startServerReadyTimeout": 60000,
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/dashboard",
        "http://localhost:4173/design-system",
        "http://localhost:4173/demos",
        "http://localhost:4173/marketing",
        "http://localhost:4173/ecommerce",
        "http://localhost:4173/animations"
      ],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage --disable-gpu --headless=new",
        "maxWaitForLoad": 45000,
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "requestLatencyMs": 0,
          "downloadThroughputKbps": 10240,
          "uploadThroughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "emulatedFormFactor": "desktop",
        "locale": "en-US",
        "blockedUrlPatterns": [
          "*.googletagmanager.com",
          "*.google-analytics.com",
          "*.googlesyndication.com"
        ]
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.85 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.85 }],
        "categories:seo": ["error", { "minScore": 0.9 }],
        "first-contentful-paint": ["error", { "maxNumericValue": 2000 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "speed-index": ["error", { "maxNumericValue": 3000 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["error", { "maxNumericValue": 300 }],
        "interactive": ["warn", { "maxNumericValue": 5000 }],
        "uses-webp-images": "warn",
        "unused-css-rules": "warn",
        "efficient-animated-content": "warn",
        "legacy-javascript": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "server": {
      "port": 9009,
      "storage": "./.lighthouseci"
    },
    "wizard": {
      "lighthouse": {
        "hostname": "0.0.0.0",
        "port": 9009,
        "chromePort": 9222
      }
    }
  }
}
